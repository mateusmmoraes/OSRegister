@model OSRegister.Client

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete client</h1>

<h3>Are you sure you want to delete this client?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Client Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClientName)
        </dd>
        <dt class = "col-sm-2">
            Client E-mail
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClientEmail)
        </dd>
        <dt class = "col-sm-2">
            Client Phone 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClientPhone)
        </dd>
        <dt class = "col-sm-2">
            Client Adress
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClientAdress)
        </dd>
        <dt class = "col-sm-2">
            Client Role
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClientRole)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ClientId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
