@model OSRegister.Client

@{
    ViewData["Title"] = "Create";
}

<h1>Create new client</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClientName" class="control-label">Client Name</label>
                <input asp-for="ClientName" class="form-control" />
                <span asp-validation-for="ClientName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientEmail" class="control-label">Client E-mail</label>
                <input asp-for="ClientEmail" class="form-control" />
                <span asp-validation-for="ClientEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientPhone" class="control-label">Client Phone</label>
                <input asp-for="ClientPhone" class="form-control" />
                <span asp-validation-for="ClientPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientAdress" class="control-label">Client Address</label>
                <input asp-for="ClientAdress" class="form-control" />
                <span asp-validation-for="ClientAdress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientRole" class="control-label">Client Role</label>
                <input asp-for="ClientRole" class="form-control" />
                <span asp-validation-for="ClientRole" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
